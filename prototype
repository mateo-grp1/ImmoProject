  <script>
    $(document).ready(function(){  
    var $carousel = $('.carousel'), 
        $img = $('.carousel img'), 
        indexImg = $img.length - 1,  
        i = 0, 
        $currentImg = $img.eq(i);  

    $img.hide();   
    $currentImg.show();

    $('.next').click(function(){   
        i++; 
        if(i > indexImg) { i = 0; } 
        $img.hide();
        $currentImg = $img.eq(i);   
        $currentImg.show();
    });

    $('.prev').click(function(){  
        i--;  
        if(i < 0) { i = indexImg; }
        $img.hide();
        $currentImg = $img.eq(i);
        $currentImg.show();
    });

    function slideImg(){  
        setTimeout(function(){  
            i = (i + 1) % (indexImg + 1);
            $img.hide();
            $currentImg = $img.eq(i);
            $currentImg.show();
            slideImg();  
        }, 4000); 
      }  

    slideImg();
    });
  </script>



